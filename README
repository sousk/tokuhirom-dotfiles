mkdir ~/share/
mkdir ~/share/cpan/
mkdir ~/dev/
mkdir ~/src/
mkdir ~/tmp/


sudo aptitude install -y git-core

git clone git://github.com/tokuhirom/tokuhirom-dotfiles.git ~/share/dotfiles/
cd ~/share/dotfiles/
perl setup.pl|sh

sh apt-install.sh

sudo -H cpan local::lib
sudo -H rm -rf ~/.cpan/

# chsh.

# re-run zsh

cpan -i Bundle::CPAN
cpan -i Module::Install

# use task-belike-tokuhirom
cd ~/dev
git clone git://github.com/tokuhirom/task-belike-tokuhirom.git
cd task-belike-tokuhirom


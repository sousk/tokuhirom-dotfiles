sh apt-install.sh

sudo -H cpan local::lib
sudo -H rm -rf ~/.cpan/


# chsh.

# re-run zsh

cpan -i Bundle::CPAN CPAN::SQLite
cpan -i Module::Install
cpan> o conf prerequisites_policy follow
cpan> o conf use_sqlite 1
cpan> o conf commit


defutf8 on

# -------------------------------------------------------------------------
# 色を使うための設定 (ansi-pc-color)
#
# -------------------------------------------------------------------------
#termcap  xterm 'AF=\E[3%dm:AB=\E[4%dm'
#terminfo xterm 'AF=\E[3%p1%dm:AB=\E[4%p1%dm'
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm' 
termcap  kterm 'AF=\E[3%dm:AB=\E[4%dm'
terminfo kterm 'AF=\E[3%p1%dm:AB=\E[4%p1%dm'

# -------------------------------------------------------------------------
# 256色モード
#
# -------------------------------------------------------------------------
#defbce "on"
#term xterm-256color
#attrcolor b ".I" 

# -------------------------------------------------------------------------
# multi user
#
# -------------------------------------------------------------------------
multiuser on
acladd kan
acladd atsushi
aclchg wizard +rwx "#?"

screen -t 'svn' 0
screen -t 'template' 1
screen -t 'Pages' 2
screen -t 'Data' 3
screen -t 'errorlog' 4
screen -t 'mysql' 5
screen -t 'config' 6
screen -t 'aoki' 7

